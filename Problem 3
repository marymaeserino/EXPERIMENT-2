#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
	const float z=2.5;
	float y, V;
	int x;
	
	cout<<"Enter first integer: ";
	cin>>x;
	cout<<"Enter second integer: ";
	cin>>y;
	
	switch (x)
	{
		case 1:
			if (y<1 && y<5)
			{
				V=x*y*z;
				cout<<"The value of V is: "<<V<<"."<<endl;
			}
			else if (y>=5)
			{
				V=x+y/z;
				cout<<"The value of V is: "<<V<<"."<<endl;
			}
			break;
			
		case 2:
			if (y<=5)
			{
				float abs(float V);
				
				V=x-y/z;
				V=abs(V);
				cout<<"The value of V is: "<<V<<"."<<endl;
			}
			else if (y>5)
			{
				float sqrt(float y, float z);
				
				V=x-sqrt(y, z);
				cout<<"The value of V is: "<<V<<"."<<endl;
			}
			break;
			
		default:
			{
				V=x+y+z;
				cout<<"The value of V is: "<<V<<"."<<endl;
			}
			
	}

	return 0;
}
